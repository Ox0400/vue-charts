{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist/types/",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/demo/*": [
        "./demo/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.vue",
    "./**/postcss.config.js",
    "./**/tailwind.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}